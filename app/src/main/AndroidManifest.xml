<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yagna.sample.demo">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Paycardsrecognizer"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.yagna.sample.demo.IntroActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.yagna.sample.demo.CardDetailsActivity"
            android:parentActivityName="com.yagna.sample.demo.IntroActivity"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yagna.sample.demo.IntroActivity" />
        </activity>

        <activity
            android:name="com.yagna.sample.demo.FinalActivity"
            android:parentActivityName="com.yagna.sample.demo.IntroActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yagna.sample.demo.IntroActivity" />
        </activity>
    </application>
</manifest>
